/* performimg arithmetic operations using switch case statement*/
#include <stdio.h>
#include <conio.h>
 int main() {
 char op;
int a,b;
printf("enter first number , operation , and the second number : ") ;

scanf("%d", &a );
scanf("%c", &op);
scanf("%d", &b);
 switch(op) {

case '+':
printf("\nresult=%d" ,a+b);
break;
 case '-':
printf("result=%d\n" ,a-b);
break;
case '*':
printf("result=%d\n" , a*b);
break;
case '/':
printf("result=%d\n", a/b);
break;
default:
printf("result=%d\n", a%b);
break;

};
 printf("the program is executed
.") ;
 return 0;

};
